doctype html
html(lang='en')
  head
    title Members Only
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/stylesheets/style.css')

  body
    nav
      ul.navbar   
        li
          a(href="/") Home 
        li 
          a(href="/sign-up") Sign Up
        li 
          a(href="/sign-in") Sign In
        if user
          li 
            a(href='/joinmembers') Join Members
          li 
            a(href="/messageForm") Add Message 
          li.red 
            a(href='/log-out') Sign out
  block content 
    if user
      h2.center Hello #{user.username}!
    if comments.length > 0
      ul.comments
        each comment in comments
          div.container 
            div.usercomment
              li= comment.title
              li= comment.comment
            div.userinfo 
              li
                b= comment.user.username
              li= comment.timestamp.toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric',hour:'numeric' })

    else
      p.comments.center 
        b No comments found.






    
      

